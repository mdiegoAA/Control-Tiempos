@model GuardarDiaCalendarioDTO

    <button class="btn btn-sm btn-primary" data-bind="click:crear">Crear</button>

    <div class="modal fade" id="dia-modal" role="dialog" aria-labelledby="modal-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="modal-label">Registrar Día Calendario</h4>
                </div>
                <div class="modal-body">
                    <form id="dia-form" name="dia-form" class="form-horizontal">
                        @Html.HiddenFor(m => m.Id, new { data_bind = "value: id" })
                        <div class="control-group">
                            @Html.LabelFor(m => m.Dia, new { @class = "control-label" })
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Dia, new { @class = "form-control", data_bind = "datetimepicker: dia, datetimepickerOptions: { locale: 'es', format: 'DD/MM/YYYY' }" })
                                @Html.ValidationMessageFor(m => m.Dia, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="control-group">
                            @Html.LabelFor(m => m.EsFestivo, new { @class = "control-label" })
                            <div class="controls">
                                @Html.CheckBoxFor(m => m.EsFestivo, new { data_bind = "checked: esFestivo" })
                                @Html.ValidationMessageFor(m => m.EsFestivo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-sm btn-primary" data-bind="click: guardar">Realizar Cambios</button>
                </div>
            </div>
        </div>
    </div>
